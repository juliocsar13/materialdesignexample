<resources>
    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="AppTheme.Base" parent="Theme.AppCompat">
        <!--Action bar Color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--Top status bar color -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--Text color primary -->
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <!--Background for app -->
        <item name="android:windowBackground">@color/textColorPrimary</item>
        <!--Bottom navigation barr -->
        <item name="android:navigationBarColor">@color/textColorPrimary</item>
        <!--Left menu action barr -->
        <item name="colorAccent">@color/windowBackgroundColor</item>
        <!-- -->
        <item name="android:windowNoTitle">true</item>
        <!--Hide default action bar -->
        <item name="windowActionBar">false</item>
    </style>
</resources>


